<Window x:Class="Rack_OGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rack_OGame"
        mc:Ignorable="d"
        Title="Rack-O" Height="450" Width="800">
    <Grid>

        <StackPanel x:Name="TurnPanel"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <TextBlock FontSize="54"
                               Text="Player:"/>
        </StackPanel>

        <Canvas x:Name="PlayerCanvas"
                Grid.Row="1"
                Width="300"
                Height="300">
            <UniformGrid x:Name="PlayerRack"
                             Width="300"
                             Height="300"
                             Rows="10"
                             Columns="1">
            </UniformGrid>
        </Canvas>
    </Grid>
</Window>
