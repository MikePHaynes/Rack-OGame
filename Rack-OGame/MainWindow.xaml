<Window x:Class="Rack_OGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rack_OGame"
        mc:Ignorable="d"
        Title="Rack-O" Height="450" Width="800"
        Background="Aquamarine">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20">
            <Button Margin="0,5,0,0" Background="Red" Content="50" Foreground="White" Width="150" Height="20"/>
            <Button Margin="0,5,0,0" Background="Red" Content="45" Foreground="White" Height="20"/>
            <Button Margin="0,5,0,0" Background="Red" Content="40" Foreground="White" Height="20"/>
            <Button Margin="0,5,0,0" Background="Red" Content="35" Foreground="White" Height="20"/>
            <Button Margin="0,5,0,0" Background="Red" Content="30" Foreground="White" Height="20"/>
            <Button Margin="0,5,0,0" Background="Red" Content="25" Foreground="White" Height="20"/>
            <Button Margin="0,5,0,0" Background="Red" Content="20" Foreground="White" Height="20"/>
            <Button Margin="0,5,0,0" Background="Red" Content="15" Foreground="White" Height="20"/>
            <Button Margin="0,5,0,0" Background="Red" Content="10" Foreground="White" Height="20"/>
            <Button Margin="0,5,0,0" Background="Red" Content="5" Foreground="White" Height="20"/>
        </StackPanel>

    </Grid>
</Window>
